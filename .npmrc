# Use hoisted node_modules for React ecosystem compatibility
node-linker=hoisted

# Exclude React types from hoisting to allow different versions per workspace
public-hoist-pattern[]=*
public-hoist-pattern[]=!@types/react
public-hoist-pattern[]=!@types/react-dom
public-hoist-pattern[]=!@types/react-native

# Match yarn's behavior for semver ranges
save-prefix=""

# Don't fail on peer dependency conflicts (React ecosystem compatibility)
strict-peer-dependencies=false

# Auto-install peer dependencies for better DX
auto-install-peers=true


